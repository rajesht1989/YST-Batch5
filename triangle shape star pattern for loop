//get number from user and print triangle shape star pattern

#include<stdio.h>

int getNumber(){
    int number;
    printf("Enter a number : ");
    scanf("%d",&number);
    return number;
}
int trianglePattern(int n){
    for(int r = 0;r < n;r++){
        for(int s = 0;s < n - r - 1;s++)
        printf("  ");
         for(int c = 0;c <r * 2 + 1;c++)
        printf(" *");
        printf("\n");
    }
}
int main(){
    int n=getNumber();
    trianglePattern(n);
}
