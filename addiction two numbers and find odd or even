//get two number from user and add them and identify odd or even number and print it on console

#include<stdio.h>

int getNumberFromUser(){
int number;
scanf("%d",&number);
return number;
}
int addiction(int a,int b){
return a+b;
}
int findOddOrEven(int c){
if(c%2==0){
    printf("This Number Is Even Number");
}
else{
    printf("This Number Is Odd Number");
}
}
void main(){
printf("Enter The First Number");
int a=getNumberFromUser();
printf("Enter The Second Number");
int b=getNumberFromUser();
int c=addiction(a,b);

findOddOrEven(c);
}
