//write a program to get radius from user and find  volume of cylinder 
#include<stdio.h>
float getRadiusFromUser(){
    float n;
    printf("Enter a radius :");
    scanf("%f",&n);
    return n;
}
float getHeightFromTheUser(){
    float a;
    printf("Enter a height : ");
    scanf("%f",&a);
    return a; 
}
float volumeOfCylinder(int n,int a){
    return 3.14*(n*n)*a;
}
void main(){
   float n=getRadiusFromUser();
   float a=getHeightFromTheUser();
   float c=volumeOfCylinder(n, a);
   printf("Volume of cylinder is %f",c);
}
