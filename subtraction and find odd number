//write a program get two number from user and subtraction them identify odd number

#include <stdio.h>

int getNumberFromUser(){
int number;
scanf("%d",&number);
return number;
}
int sub(int a,int b){
return a-b;
}
int findOddNumber(int c){
if (c%2==1){
    printf("This Number Is ODD Number");
}
else{
    printf("This Number Is Not Odd Number");
}
}
void main(){
printf("Enter The First Number ");
int a=getNumberFromUser();
printf("Enter The Second Number ");
int b=getNumberFromUser();
int c=sub(a,b);

printf("Answer Is %d\n",c);

findOddNumber(c);
}
