        printf("The Number Is Prime");
    }
    else if(a==5){
        printf("The Number Is Prime");
    }
    else if(a==7){
        printf("The Number Is Prime");
    }
    else if(a==11){
        printf("The Number Is Prime");
    }
    else if(a==13){
        printf("The Number Is Prime");
    }
    else if(a==17){
        printf("The Number Is Prime");
    }
    else if(a==19){
        printf("The Number Is Prime");
    }
