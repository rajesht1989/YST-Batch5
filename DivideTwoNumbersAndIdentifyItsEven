//write a program to get Two  number from user and divide them and identify it is  Even or  not
#include<stdio.h>
int getNumberFromUser(){
    int n;
    printf("Enter a number :");
    scanf("%d",&n);
    return n;
}
int divideTheNumbers(int n,int m){
    return n/m;
}
void identifyEvenNumber(int z){
    if(z%2==0){
        printf("The Number is  Even number");
    }
    else{
        printf("The Number is Not Even number");
    }
}
void main(){
    int n=getNumberFromUser();
    int m=getNumberFromUser();
    int z=divideTheNumbers(n,m);
    printf("Answer is %d\n",z);
    identifyEvenNumber(z);
}
