//get number from user those many time get character and find how much vowels print it on console


#include<stdio.h>

int getNumber(){
int number;
scanf("%d",&number);
return number;
}
int findVowels(int a){
    int vowels=0;
  for(int i=1;i<=a;i++){
    char character;
    printf("Enter The Character %d\n", i);
      scanf(" %c",&character);

    switch(character){
           case 'A':
           case 'a':
           case 'E':
           case 'e':
           case 'I':
           case 'i':
           case 'O':
           case 'o':
           case 'U':
           case 'u':
              vowels++;
           break ;
           default:
           break;

}
}
    printf("Number Of Vowels : %d\n",vowels);
    return 0;
}
void main(){
    printf("Enter The Number ");
  int a=getNumber();
  findVowels(a);
   }
