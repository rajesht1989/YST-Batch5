//write a program get two number from user and add them identify odd numbers

#include <stdio.h>

int getNumberFromUser(){
int number;
scanf("%d",&number);
return number;
}
int add(int a,int b){
return a+b;
}
int addTwoNumbers(int c){
if (c%2==1){
    printf("This Number Is ODD Number");
}
else{
    printf("This Number Is Not ODD Number");
}
}
void main(){
printf("Enter The First Number ");
int a=getNumberFromUser();
printf("Enter The Second Number ");
int b=getNumberFromUser();
int c=add(a,b);

printf("Answer Is %d\n",c);

addTwoNumbers(c);
}
