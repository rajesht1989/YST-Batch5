// get Number From User those many times get number and find how many even numbers in numbers and print it on console

#include<stdio.h>

int getNumber(){
    int number;
    scanf("%d",&number);
    return number;
}
int findEvenNumber(int a){
   int even,evenNumber=0;
    for(int i=1;i<=a;i++){
        printf("%d Enter The Number ",i);
        even=getNumber();
        if(even%2==0){
            evenNumber++;
        }
        
    }
    printf("Number Of Even Number Is %d",evenNumber);
}
void main(){
    printf("Enter The Intiger ");
    int a=getNumber();
    findEvenNumber(a);
}
