// get a number from user and draw hollow star pattern 
#include<stdio.h>
int getANumberFromUser(){
  int number;
  scanf("%d",&number);
  return number;
}
int thoseManyTime(int n){
     
     int addition = 0;
      for(int i = 1;i <= n;i++){
          printf("Enter a number %d\n",i);
          
          addition +=  getANumberFromUser();  
      }
   return addition;
}
 void main(){
   printf("Enter a iteration ");
   int n = getANumberFromUser();
   int addition = thoseManyTime(n);
   printf("Addition is %d",addition);
   
 }
